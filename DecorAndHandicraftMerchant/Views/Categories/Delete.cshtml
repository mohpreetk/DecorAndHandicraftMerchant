@model DecorAndHandicraftMerchant.Models.Category

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this? All the subsequent sub categories and products will be deleted.</h3>
<div class="center_view">
    <hr />
    <div>
        @if (Model.Photo != null)
        {
            <img src="~/images/categories_added/@Model.Photo" alt="Category" class="detail_image" />
        }
        else
        {
            <img src="~/images/n_a.jpg" alt="Product" class="detail_image" />
        }
    </div>
    <div class="text-center">
        @Html.DisplayFor(model => model.Name)
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="CategoryId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>

    <div class="bottom_right">
        <a href="javascript:history.go(-1);"><img src="~/images/app_icons/back.png" alt="Back" title="Back" class="back" /></a>
    </div>
</div>
