@model DecorAndHandicraftMerchant.Models.Product

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div class="center_view">
    <hr />
    <div>
        @if (Model.Photo != null)
        {
            <img src="~/images/products_added/@Model.Photo" alt="Product" asp-append-version="true" width="250px" height="250px" />

        }
        else
        {
            <img src="~/images/n_a.jpg" alt="Product" class="detail_image" />
        }
    </div>
    <div class="text-center">
        @Html.DisplayFor(model => model.Name)<br />
        @if (Model.Description != null)
        {
            @Html.DisplayFor(model => model.Description)<br />
        }
        @Html.DisplayFor(model => model.Price) <br />
        @Html.DisplayFor(model => model.SubCategory.Name)
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ProductId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>

    <div class="bottom_right">
        <a href="javascript:history.go(-1);"><img src="~/images/app_icons/back.png" alt="Back" title="Back" class="back" /></a>
    </div>
</div>